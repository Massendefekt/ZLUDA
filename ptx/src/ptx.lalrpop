ModuleVariable: variable::Variable<variable::VariableType, &'input str> = {
    LinkingDirectives ".global" <def:GlobalVariableDefinitionNoArray> => {
        let (align, v_type, name, array_init) = def;
        variable::Variable { align, v_type: variable::VariableType::Global(v_type), name, array_init }
    },
    LinkingDirectives ".shared" <def:GlobalVariableDefinitionNoArray> => {
        let (align, v_type, name, array_init) = def;
        variable::Variable { align, v_type: variable::VariableType::Shared(v_type), name, array_init: Vec::new() }
    },
    <ldirs:LinkingDirectives> <space:Or<".global", ".shared">> <var:VariableArrayOrPointer<SizedScalarType>> =>? {
        let (align, t, name, arr_or_ptr) = var;
        let (v_type, array_init) = match arr_or_ptr {
            ast::ArrayOrPointer::Array { dimensions, init } => {
                if space == ".global" {
                    (variable::VariableType::Global(variable::VariableGlobalType::Array(t, dimensions)), init)
                } else {
                    (variable::VariableType::Shared(variable::VariableGlobalType::Array(t, dimensions)), init)
                }
            }
            ast::ArrayOrPointer::Pointer => {
                if !ldirs.contains(ast::LinkingDirective::EXTERN) {
                    return Err(ParseError::User { error: error::PtxError::NonExternPointer });
                }
                if space == ".global" {
                    (variable::VariableType::Global(variable::VariableGlobalType::Pointer(t, types::pointer::PointerStateSpace::Global)), Vec::new())
                } else {
                    (variable::VariableType::Shared(variable::VariableGlobalType::Pointer(t, types::pointer::PointerStateSpace::Shared)), Vec::new())
                }
            }
        };
        Ok(variable::Variable{ align, array_init, v_type, name })
    }
}

