ParamDeclaration: (Option<u32>, variable::VariableParamType, &'input str) = {
    <var:ParamVariable> =>? {
        let (align, array_init, v_type, name) = var;
        if array_init.len() > 0 {
            Err(ParseError::User { error: error::PtxError::ArrayInitalizer })
        } else {
            Ok((align, v_type, name))
        }
    }
}

