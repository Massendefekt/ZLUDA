ImmediateValue: instructions::arguments::ImmediateValue = {
    // TODO: treat negation correctly
    <neg:"-"?> <x:NumToken> =>? {
        let (num, radix, is_unsigned) = x;
        if neg.is_some() {
            match i64::from_str_radix(num, radix) {
                Ok(x) => Ok(instructions::arguments::ImmediateValue::S64(-x)),
                Err(err) => Err(ParseError::User { error: error::PtxError::ParseInt(err) })
            }
        } else if is_unsigned {
            match u64::from_str_radix(num, radix) {
                Ok(x) => Ok(instructions::arguments::ImmediateValue::U64(x)),
                Err(err) => Err(ParseError::User { error: error::PtxError::ParseInt(err) })
            }
        } else {
            match i64::from_str_radix(num, radix) {
                Ok(x) => Ok(instructions::arguments::ImmediateValue::S64(x)),
                Err(_) => {
                    match u64::from_str_radix(num, radix) {
                        Ok(x) => Ok(instructions::arguments::ImmediateValue::U64(x)),
                        Err(err) => Err(ParseError::User { error: error::PtxError::ParseInt(err) })
                    }
                }
            }
        }
    },
    <f:F32Num> => {
        instructions::arguments::ImmediateValue::F32(f)
    },
    <f:F64Num> => {
        instructions::arguments::ImmediateValue::F64(f)
    }
}

